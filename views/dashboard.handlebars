<script>
  // Select all inputs using the "name" attribute pattern
  document.querySelectorAll('input[type="text"][name]').forEach(input => {
  input.addEventListener('blur', function() { let value =
  parseFloat(this.value.replace(/,/g, '')); if (!isNaN(value)) { this.value =
  value.toFixed(2); } }); });
</script>